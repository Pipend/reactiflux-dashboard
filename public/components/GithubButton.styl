.github-btn 
    font 700 11px/14px 'Helvetica Neue',Helvetica,Arial,sans-serif
    overflow hidden
    height 20px


.gh-btn,.gh-count,.gh-ico 
    float left


.gh-btn,.gh-count 
    padding 2px 5px 2px 4px
    color #333
    text-decoration none
    text-shadow 0 1px 0 #fff
    white-space nowrap
    cursor pointer
    border-radius 3px


.gh-btn 
    background-color #eee
    background-image linear-gradient(to bottom,#fcfcfc 0,#eee 100%)
    background-repeat no-repeat
    border 1px solid #d5d5d5
    text-transform capitalize

.gh-btn:focus,.gh-btn:hover 
    text-decoration none
    background-color #ddd
    background-image linear-gradient(to bottom,#eee 0,#ddd 100%)
    border-color #ccc


.gh-btn:active 
    background-image none
    background-color #dcdcdc
    border-color #b5b5b5
    box-shadow inset 0 2px 4px rgba(0,0,0,.15)


.gh-ico 
    width 14px
    height 18px
    margin-right 4px
    background-position center bottom
    background-repeat no-repeat
    &.fork
        background-image url('data:image/svg+xml;base64,')
        background-size 10px 16px
    &.star
        background-image url('data:image/svg+xml;base64,')
        background-size 14px 16px

.gh-count 
    position relative
    margin-left 4px
    background-color #fafafa
    border 1px solid #d4d4d4

.gh-count:focus,.gh-count:hover 
    color #4183C4


.gh-count:after,.gh-count:before 
    content ''
    position absolute
    display inline-block
    width 0
    height 0
    border-color transparent
    border-style solid


.gh-count:before 
    top 50%
    left -3px
    z-index 1
    margin-top -4px
    border-width 4px 4px 4px 0
    border-right-color #fafafa


.gh-count:after 
    top 50%
    left -4px
    z-index 0
    margin-top -5px
    border-width 5px 5px 5px 0
    border-right-color #d4d4d4


.github-btn-large 
    height 30px


.github-btn-large .gh-btn,.github-btn-large .gh-count 
    padding 3px 10px 3px 8px
    font-size 16px
    line-height 22px
    border-radius 4px


.github-btn-large .gh-count 
    margin-left 6px


.github-btn-large .gh-count:before 
    left -6px
    margin-top -6px
    border-width 6px 6px 6px 0


.github-btn-large .gh-count:after 
    left -7px
    margin-top -7px
    border-width 7px 7px 7px 0

